<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mainMenu.MoreInfoFragment">


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="30dp"
        android:paddingStart="45dp">

        <TextView
            android:layout_width="287dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/nunito"
            android:gravity="center"
            android:text="More Info"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/logoutIv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_logout_24"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout1"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Personal Information"
            android:fontFamily="@font/nunito"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/grey"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Victor Ramos"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="777 777 777"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="VictorRamos@email.com"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Contact Us"
            android:fontFamily="@font/nunito"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/grey"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:fontFamily="@font/nunito"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="18dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123 Fifth Avenue, New York, NY 10160, USA"
                    android:fontFamily="@font/nunito"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:fontFamily="@font/nunito"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="18dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+1 910 636 4526"
                    android:fontFamily="@font/nunito"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email Adress"
                    android:fontFamily="@font/nunito"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="18dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CasaMexico@email.com"
                    android:fontFamily="@font/nunito"
                    android:textSize="18sp"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>




</RelativeLayout>